{
  "name": "agnoc",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all 'build:*'",
    "build:packages": "lerna run build",
    "build:typedoc": "typedoc",
    "clean": "lerna run clean",
    "dependency:upgrade": "ncu --upgrade --peer --deep && yarn-deduplicate --strategy fewer && yarn install",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:code": "eslint --cache --max-warnings 0 .",
    "lint:code:fix": "eslint --fix .",
    "lint:style": "prettier --check .",
    "lint:style:fix": "prettier --write .",
    "lint:types": "tsc",
    "prepare": "husky install",
    "test": "npm-run-all 'test:*'",
    "test:packages": "lerna run test",
    "version": "npm run lint:code:fix && npm run lint:style:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tsconfig/node18": "^1.0.1",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^10.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^18.14.2",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "babel-plugin-module-resolver": "^5.0.0",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "core-js": "^3.28.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "json": "^11.0.0",
    "lerna": "^6.5.1",
    "lint-staged": ">=13.1.2",
    "npm-check-updates": "^16.7.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "2.8.4",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.25",
    "typedoc-monorepo-link-types": "^0.0.4",
    "typescript": "^4.9.5",
    "yarn-deduplicate": "^6.0.1"
  },
  "engines": {
    "node": ">=18.12"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{md,json,yaml,yml}": "prettier -w"
  }
}
