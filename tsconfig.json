{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": ["packages/*/src", "packages/*/test", "packages/**/typings.d.ts"],
  "typedocOptions": {
    "entryPoints": ["packages/cli", "packages/core", "packages/domain", "packages/toolkit"],
    "entryPointStrategy": "packages",
    "out": "public/typedoc",
    "excludePrivate": false,
    "excludeProtected": false,
    "excludeInternal": false,
    "includeVersion": true,
    "sort": ["static-first", "instance-first"],
    "hideGenerator": true,
    "noMissingExports": true
  }
}
